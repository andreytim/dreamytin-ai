{
  "name": "dreamytin-ai",
  "version": "1.0.0",
  "description": "Personal AI assistant with local and remote model support",
  "main": "src/main/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "npm run dev:renderer & npm run electron:dev",
    "electron:dev": "sleep 3 && NODE_ENV=development electron .",
    "build:renderer": "vite build",
    "dev:renderer": "vite",
    "build": "npm run build:renderer && electron-builder",
    "build:mac": "npm run build:renderer && electron-builder --mac",
    "build:win": "npm run build:renderer && electron-builder --win",
    "build:linux": "npm run build:renderer && electron-builder --linux",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:auto": "chokidar \"src/**/*.js\" \"src/**/*.jsx\" \"tests/**/*.js\" \"tests/**/*.jsx\" -c \"npm test\""
  },
  "devDependencies": {
    "@babel/preset-env": "^7.28.0",
    "@babel/preset-react": "^7.27.1",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@vitejs/plugin-react": "^4.2.0",
    "babel-jest": "^30.0.4",
    "chokidar-cli": "^3.0.0",
    "electron": "^28.0.0",
    "electron-builder": "^26.0.12",
    "jest": "^30.0.4",
    "jest-environment-jsdom": "^30.0.4",
    "jsdom": "^26.1.0",
    "supertest": "^7.1.3",
    "vite": "^5.0.0"
  },
  "dependencies": {
    "@ai-sdk/anthropic": "^1.2.12",
    "@ai-sdk/google": "^1.2.22",
    "@ai-sdk/openai": "^1.3.23",
    "ai": "^4.3.19",
    "cors": "^2.8.0",
    "dotenv": "^16.0.0",
    "express": "^4.18.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-markdown": "^9.0.1"
  },
  "build": {
    "appId": "com.dreamytin.ai",
    "productName": "DreamyTin AI",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/main/**/*",
      "src/backend/**/*",
      "src/config/**/*",
      "dist/**/*",
      "data/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "src/backend",
        "to": "backend"
      },
      {
        "from": "src/config",
        "to": "config"
      }
    ]
  }
}
